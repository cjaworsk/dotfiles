#!/bin/bash

calendar() {
    LOCK_FILE="$HOME/.cache/eww-calendar.lock"

    run() {
        eww open calendar &
    }

    # Open widgets
    if [[ ! -f "$LOCK_FILE" ]]; then
        eww close system music_win audio_ctl
        touch "$LOCK_FILE"
        run && echo "ok good!"
    else
        eww close calendar
        rm "$LOCK_FILE" && echo "closed"
    fi
}

## System graphs

system() {
    LOCK_FILE_MEM="$HOME/.cache/eww-system.lock"

    # Open widgets
    if [[ ! -f "$LOCK_FILE_MEM" ]]; then
        eww -c close calendar music_win audio_ctl
        touch "$LOCK_FILE_MEM"
        eww update show-graph=true
        eww open sys_info &
        echo "opened"
    else
        eww update show-graph=false
        eww close sys_info
        rm "$LOCK_FILE_MEM" && echo "closed"
    fi
}

music() {
    LOCK_FILE_SONG="$HOME/.cache/eww-song.lock"
    EWW_BIN="$HOME/.local/bin/eww/eww"

    run() {
        ${EWW_BIN} -c $HOME/.config/eww/bar open music_win
    }

    # Open widgets
    if [[ ! -f "$LOCK_FILE_SONG" ]]; then
        ${EWW_BIN} -c $HOME/.config/eww/bar close system calendar
        touch "$LOCK_FILE_SONG"
        run && echo "ok good!"
    else
        ${EWW_BIN} -c $HOME/.config/eww/bar close music_win
        rm "$LOCK_FILE_SONG" && echo "closed"
    fi
}

audio() {
    LOCK_FILE_AUDIO="$HOME/.cache/eww-audio.lock"
    EWW_BIN="$HOME/.local/bin/eww/eww"

    # Open widgets
    if [[ ! -f "$LOCK_FILE_AUDIO" ]]; then
        eww close system calendar music
        touch "$LOCK_FILE_AUDIO"
        eww open audio_ctl && echo "ok good!"
    else
        eww close audio_ctl
        rm "$LOCK_FILE_AUDIO" && echo "closed"
    fi
}

if [ "$1" = "calendar" ]; then
    calendar
elif [ "$1" = "system" ]; then
    system
elif [ "$1" = "music" ]; then
    music
elif [ "$1" = "audio" ]; then
    audio
fi

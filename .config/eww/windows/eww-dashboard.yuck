;; Dashboard Window -- anchor to the left side and slide in when called

(defwindow dashboard_window
  :monitor 0
  :geometry (geometry :x "5px" :y "5px" :width "20%" :height "90%")
  :stacking "foreground"
  :anchor "left center"
  :x "0px"
  :transition "slide"
  :namespace "dash"
  (left_dashboard)
)
